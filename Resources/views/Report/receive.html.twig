        .fa-bandcamp,.custom_profile_icon,.fa-money,.fa-database{
            font-size: 3rem;
            margin: 0;
        }#}
        .card-body{padding: 50px 45px;}
        .card-body h4{
            display: inline-block;
            vertical-align: top;
            margin: 0;
            padding: 10px 20px 20px 20px;
        }
        .card-block  h2{margin: 0 0 20px 12px;}
