    <div class="card-body">
        <div class="container">
            <div class="card">
                <div class="card-block">
                    <div class="row">
                        <div class="col-sm-12 col-md-12">
                            <div class="custom-margin balance">
                                {#                                <a href="#">#}
                                <div class="icon">
                                    <i class="fa fa-database" aria-hidden="true"></i><h4> Income Statement</h4>
                                </div>
                                <div class="count balance_count">

                                    <table>
                                        {% for key, e in  data %}
                                            <tr>
                                                <td>{{key }} &nbsp;</td>
                                                <td>{{e.name |default("")}}</td>
                                                <td>{{e.balance |default("")}}</td>
                                            </tr>
                                        {% endfor%} 
                                    </table>
                                    <hr/>
                                    <table> 
                                        {% for e in entities %}
                                            <tr>
                                                <td>{{e.account.code}}</td>
                                                <td>{{e.account}}</td>
                                                <td>{{e.debit}}</td>
                                                <td>{{e.credit}}</td>
                                            </tr>
                                        {% endfor%}    
                                    </table>
                                </div>
