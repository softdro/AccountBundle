{% extends '::base.html.twig' %}

{% block body -%}
    <h1>UserPayment</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ entity.amount }}</td>
            </tr>
            <tr>
                <th>Payment_date</th>
                <td>{{ entity.paymentdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Payment_method</th>
                <td>{{ entity.paymentmethod }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('userpayment') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('userpayment_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
